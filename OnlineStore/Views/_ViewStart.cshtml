@*{
    
    string CurrentReq = ViewContext.RouteData.Values["controller"].ToString();
    dynamic Layout;
    switch (CurrentReq)
    {
        case "Home":
            Layout = "~/Views/Shared/_Layout";
            break;
        default:
            //Admin layout
            Layout = "~/Views/Shared/_AdminLayout";
            break;
    }
}*@
