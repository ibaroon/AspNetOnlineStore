@model List<Product>


<!-- ======= Services Section ======= -->
<section id="services" class="services section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2 class="bs-red">منتجات قسم - @foreach (var item in ViewBag.Cat) { @item.Name } </h2>
            <!--p>نتميز بمنتجات عالية الجودة</p-->
        </div>
        <div class="row gy-4">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                    <div class="icon-box iconbox-blue" style="width: 100%;">
                      <img src="../../@item.Photo" class="MyProductImages" />
                        <h4><a href="../ProductDetails/@item.Id">@item.Name</a></h4>
                        <p>@item.Description</p>
                    </div>
                </div>
            }




        </div>

    </div>
</section><!-- End Services Section -->