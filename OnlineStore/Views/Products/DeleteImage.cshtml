@model OnlineStore.Models.ProductImage

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <br />
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Product Image</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Product Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Name)
            </dd>
            <dt class="col-sm-2">
                Image
            </dt>
            <dd class="col-sm-10">
                <a href="../../@Model.Image" target="_blank">@Model.Image</a>
            </dd>
            
        </dl>

        <form asp-action="DeleteImageConfirmed">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="hidden" name="ProductId" value="@Model.ProductId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="btn btn-warning" href="/Products/ProductImages/@Model.ProductId">Back to List</a>
        </form>
        <br />
    </div>
</div>
