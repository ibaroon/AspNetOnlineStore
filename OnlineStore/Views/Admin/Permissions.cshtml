
<div class="container">
    <br />
    <h2>Users Roles</h2>
  
    <div>
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    
                    <th>Roles</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int cc = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@cc</td>
                        <td>@item.user.UserName</td>
                        <td>@item.user.Email</td>
                        <td>@item.user.PhoneNumber</td>
                        <td>
                            @foreach (var item2 in ViewBag.AllRoles)
                            {
                                 @if (item.userRoles.Contains(item2.ToString()))
                                {
                                    <a class="btn btn-primary" href="ChangeUserRole?UserId=@item.user.Id&Role=@item2">@item2</a>
                                    // <a class="btn btn-outline-primary" href="ChangeUserRole/@item.user.Id/@item2">@item2</a>
                                    // to use href above we have to add routing in program.cs
                               // app.MapControllerRoute(
                               // name: "default",
                               // pattern: "{controller=Home}/{action=Index}/{userid?}/{role?}");
                                }
                                else
                                {
                                    <a class="btn btn-outline-primary" href="ChangeUserRole?UserId=@item.user.Id&Role=@item2">@item2</a>
                                }   
                                
                           
                            }
                        </td>

                    </tr>
                    cc = cc + 1;
                }
            </tbody>
        </table>

        </<div>
        </div>
