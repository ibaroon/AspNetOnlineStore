<div class="container">
    <br />
    <h2>Details</h2>

    <div>
        <h4>User</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Model.UserName
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>
            <dt class="col-sm-2">
                Phone
            </dt>
            <dd class="col-sm-10">
                @Model.PhoneNumber
            </dd>
          

        </dl>
    </div>
    <div>
        <a class="btn btn-primary" asp-action="EditUser" asp-route-id="@Model?.Id">Edit</a> |
        <a class="btn btn-warning" asp-action="Users">Back to List</a>

    </div>
</div>
<br />