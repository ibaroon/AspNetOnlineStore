
<div class="container">
    <br />
    <h2>Delete</h2>
                
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Role</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>
            <dt class="col-sm-2">
                Normalized Name
            </dt>
            <dd class="col-sm-10">
                @Model.NormalizedName
            </dd>
            <dt class="col-sm-2">
                Concurrency Stamp
            </dt>
            <dd class="col-sm-10">
                @Model.ConcurrencyStamp
            </dd>
            
        </dl>

        <form asp-action="DeleteRoleConfirmed">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="btn btn-warning" asp-action="Roles">Back to List</a>
        </form>
        <br />
    </div>
</div>
