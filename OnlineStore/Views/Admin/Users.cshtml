

<div class="container">
    <br />
    <h2>Users</h2>
    <p>
       
        <a class="btn btn-primary" href="/Identity/Account/Register">Create New <i class="bi bi-plus"></i></a>
    </p>
    <div>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>#</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int cc = 1;
            }
@foreach (var item in Model)
        {
            <tr>
                <td>@cc</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
            <td>
                    <a class="btn btn-warning" title="Edit" asp-action="EditUser" asp-route-id="@item.Id"><i class="bx bx-message-square-edit"></i></a> |
                    <a class="btn btn-primary" asp-action="UserDetails" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger" title="Delete" asp-action="DeleteUser" asp-route-id="@item.Id"><i class="bx bx-message-square-x"></i></a>
            </td>
           
                    </tr>
                    cc += 1;   }
            </tbody>
    </table>
    
</<div>
</div>
