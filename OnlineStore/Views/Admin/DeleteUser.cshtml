
<div class="container">
    <br />
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>User</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Model.UserName
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>
            <dt class="col-sm-2">
                Phone
            </dt>
            <dd class="col-sm-10">
                @Model.PhoneNumber
            </dd>

        </dl>

        <form asp-action="DeleteUserConfirmed">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="btn btn-warning" asp-action="Users">Back to List</a>
        </form>
        <br />
    </div>
</div>
